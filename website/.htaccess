Options -Indexes
IndexIgnore *

<FilesMatch "^\.">
    Order Allow,Deny
    Require all denied
</FilesMatch>
<FilesMatch "^composer">
  Order Allow,Deny
  Require all denied
</FilesMatch>

RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php
