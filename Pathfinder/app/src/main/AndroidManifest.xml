<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tk.pathfinder">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".Networking.AppStatus">
        <activity
            android:name=".UI.ViewMapActivity"
            android:label="@string/title_activity_view_map"
            android:parentActivityName=".UI.MapSearchActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tk.pathfinder.UI.MapSearchActivity" />
        </activity>
        <activity
            android:name=".UI.MapSearchActivity"
            android:label="@string/title_activity_map_search"
            android:parentActivityName=".UI.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tk.pathfinder.UI.HomeActivity" />
        </activity>
        <activity
            android:name=".UI.NavigationActivity"
            android:label="@string/title_activity_navigation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.NavigationSearchActivity"
            android:label="@string/title_activity_navigation_search"
            android:parentActivityName=".UI.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tk.pathfinder.UI.HomeActivity" />
        </activity>
        <activity
            android:name=".UI.HomeActivity"
            android:label="HomeActivity">
        </activity>
        <receiver android:name=".UI.MapReceiver">
            <intent-filter>
                <action android:name="tk.pathfinder.MAP_CHANGED" />
            </intent-filter>
        </receiver>
        <activity android:name=".UI.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.BuildingSpinnerActivity" />
    </application>

</manifest>